<ul>
<% @series.each do |s| %>
<li>
<h3><%= link_to s.title, s.images.first %></h3>
  <ul class="thumbs">
  <% s.images.each do |i| %>
    <li><% link_to(i) do %><img src="<%= i.public_thumb_path %>" width="<%= i.width_thumb %>" height="<%= i.height_thumb %>"><% end %></li>
  <% end %>
  </ul>
</li>
<% end %>
</ul>